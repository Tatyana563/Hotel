<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="petrenko">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="customers_feedback"/>
            </not>
        </preConditions>
        <createTable  tableName="customers_feedback">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="book_request_fk_id" type="int">
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="cleanliness" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="price_quality" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="mark" type="double precision">
                <constraints nullable="false"/>
            </column>
            <column name="is_deleted" type="boolean">
        </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="customers_feedback" baseColumnNames="book_request_fk_id"
                                 constraintName="customers_feedback_book_request"
                                 referencedTableName="book_request" referencedColumnNames="id"/>

        <rollback>
            <dropTable tableName="customers_feedback"/>
        </rollback>

    </changeSet>
</databaseChangeLog>